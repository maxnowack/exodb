{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "module": "esnext",
    "esModuleInterop": true,
    "declaration": true,
    "rootDirs": ["./src"],
    "outDir": "./dist",
    "strict": true,
    "downlevelIteration": true,
    "lib": ["es2017", "dom"],
    "typeRoots": [
      "node_modules/@types",
      ".typings"
    ],
    "baseUrl": "src",
    "noErrorTruncation": true,
  },
  "exclude": [
    "**/*.spec.ts",
  ],
  "include": [
    "src/**/*.ts"
  ]
}
