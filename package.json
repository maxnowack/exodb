{
  "name": "signaldb",
  "version": "0.8.1",
  "description": "SignalDB is a client-side database that provides a simple MongoDB-like interface to the data with first-class typescript support to achieve an optimistic UI. Data persistence can be achieved by using storage providers that store the data through a JSON interface to places such as localStorage.",
  "scripts": {
    "preversion": "npm run lint && npm run test -- run && npm run build",
    "prepare": "npm run build && husky install",
    "lint": "eslint . --max-warnings=0",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build": "rimraf dist && vite build",
    "type-check": "tsc --noEmit",
    "example:rxdb:build": "(cd examples/rxdb && npm run build) && npm run example:rxdb:copy",
    "example:rxdb:copy": "rimraf docs/public/examples/rxdb && cp -R examples/rxdb/out docs/public/examples/rxdb",
    "example:firebase:build": "(cd examples/firebase && npm run build) && npm run example:firebase:copy",
    "example:firebase:copy": "rimraf docs/public/examples/firebase && cp -R examples/firebase/out docs/public/examples/firebase",
    "example:appwrite:build": "(cd examples/appwrite && npm run build) && npm run example:appwrite:copy",
    "example:appwrite:copy": "rimraf docs/public/examples/appwrite && cp -R examples/appwrite/out docs/public/examples/appwrite",
    "example:supabase:build": "(cd examples/supabase && npm run build) && npm run example:supabase:copy",
    "example:supabase:copy": "rimraf docs/public/examples/supabase && cp -R examples/supabase/out docs/public/examples/supabase",
    "docs:dev": "vitepress dev docs",
    "docs:build": "npm run example:rxdb:build && npm run example:firebase:build && npm run example:appwrite:build && npm run example:supabase:build && vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxnowack/signaldb.git"
  },
  "homepage": "https://signaldb.js.org",
  "keywords": [
    "client-database",
    "client",
    "database",
    "local-database",
    "meteor",
    "minimongo",
    "mongodb",
    "offline-first",
    "optimistic-ui",
    "reactive",
    "replication",
    "rxdb",
    "synchronization",
    "tracker",
    "typescript"
  ],
  "author": "Max Nowack <max.nowack@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "default": "./dist/index.umd.js"
    }
  },
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@maverick-js/signals": "5.11.4",
    "@preact/signals-core": "1.5.0",
    "@reactively/core": "0.0.8",
    "@rollup/plugin-typescript": "11.1.5",
    "@typescript-eslint/eslint-plugin": "6.13.1",
    "@typescript-eslint/parser": "6.13.1",
    "@vitest/coverage-istanbul": "^0.34.4",
    "eslint": "8.54.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-prefer-object-spread": "1.2.1",
    "eslint-plugin-vitest": "0.3.10",
    "happy-dom": "12.10.3",
    "husky": "8.0.3",
    "meteor-ts-tracker": "2.0.2",
    "mobx": "^6.10.2",
    "oby": "15.1.0",
    "rimraf": "5.0.5",
    "rollup-plugin-typescript-paths": "1.4.0",
    "s-js": "0.4.9",
    "sinuous": "0.32.1",
    "sitemap-ts": "1.6.1",
    "solid-js": "1.8.6",
    "ts-node": "10.9.1",
    "tslib": "2.6.2",
    "typescript": "5.3.2",
    "usignal": "0.9.0",
    "vite": "5.0.4",
    "vite-plugin-dts": "3.6.3",
    "vite-plugin-node-polyfills": "0.17.0",
    "vite-tsconfig-paths": "4.2.1",
    "vitepress": "1.0.0-rc.31",
    "vitest": "0.34.6",
    "vitest-github-actions-reporter": "0.11.0",
    "vue": "^3.3.4"
  },
  "dependencies": {
    "fast-sort": "^3.4.0",
    "mingo": "6.4.9"
  }
}
