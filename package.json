{
  "name": "signaldb",
  "version": "0.1.2",
  "description": "SignalDB is a client side database that provides an easy mongob-like interface to the data with first class typescript support. Data persistance can be archieved by using storage providers which save the data through a JSON interface to placed such as localStorage.",
  "main": "dist/signaldb.umd.js",
  "module": "dist/signaldb.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/signaldb.es.js",
      "require": "./dist/signaldb.umd.js",
      "default": "./dist/signaldb.umd.js"
    }
  },
  "scripts": {
    "prepare": "npm run build",
    "lint": "eslint src/**.ts --max-warnings=0",
    "test": "vitest",
    "build": "tsc && vite build",
    "type-check": "tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxnowack/signaldb.git"
  },
  "homepage": "https://signaldb.js.org",
  "keywords": [
    "database",
    "local-database",
    "client-database",
    "client",
    "offline-first",
    "rxdb",
    "typescript",
    "reactive",
    "meteor",
    "minimongo",
    "tracker",
    "mongodb",
    "replication",
    "synchronization"
  ],
  "author": "Max Nowack <max.nowack@gmail.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@maverick-js/signals": "^5.11.2",
    "@preact/signals-core": "^1.3.1",
    "@rollup/plugin-typescript": "^11.1.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prefer-object-spread": "^1.2.1",
    "eslint-plugin-vitest": "^0.2.6",
    "happy-dom": "^10.3.2",
    "meteor-ts-tracker": "^2.0.1",
    "oby": "^14.3.0",
    "rimraf": "^5.0.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-typescript-paths": "^1.4.0",
    "sinuous": "^0.32.1",
    "solid-js": "^1.7.8",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6",
    "usignal": "^0.9.0",
    "vite": "^4.4.3",
    "vite-plugin-dts": "^3.3.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitepress": "^1.0.0-beta.5",
    "vitest": "^0.33.0",
    "vitest-github-actions-reporter": "^0.10.0"
  },
  "dependencies": {
    "fast-sort": "^3.4.0",
    "mingo": "^6.4.3"
  }
}
