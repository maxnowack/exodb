{
  "name": "signaldb",
  "version": "0.1.3",
  "description": "SignalDB is a client side database that provides an easy mongob-like interface to the data with first class typescript support. Data persistance can be archieved by using storage providers which save the data through a JSON interface to placed such as localStorage.",
  "scripts": {
    "prepare": "npm run build",
    "lint": "eslint src/**.ts --max-warnings=0",
    "test": "vitest",
    "build": "rimraf dist && unbuild",
    "type-check": "tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "(cd example && npm run build) && cp -R example/out docs/public/todo-example && vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxnowack/signaldb.git"
  },
  "homepage": "https://signaldb.js.org",
  "keywords": [
    "database",
    "local-database",
    "client-database",
    "client",
    "offline-first",
    "rxdb",
    "typescript",
    "reactive",
    "meteor",
    "minimongo",
    "tracker",
    "mongodb",
    "replication",
    "synchronization"
  ],
  "author": "Max Nowack <max.nowack@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@maverick-js/signals": "^5.11.2",
    "@preact/signals-core": "^1.3.1",
    "@reactively/core": "^0.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prefer-object-spread": "^1.2.1",
    "eslint-plugin-vitest": "^0.2.6",
    "happy-dom": "^10.3.2",
    "meteor-ts-tracker": "^2.0.1",
    "oby": "^14.3.0",
    "rimraf": "^5.0.1",
    "s-js": "^0.4.9",
    "sinuous": "^0.32.1",
    "sitemap-ts": "^1.4.0",
    "solid-js": "^1.7.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "unbuild": "^1.2.1",
    "usignal": "^0.9.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitepress": "^1.0.0-beta.5",
    "vitest": "^0.33.0",
    "vitest-github-actions-reporter": "^0.10.0"
  },
  "dependencies": {
    "fast-sort": "^3.4.0",
    "mingo": "^6.4.3"
  }
}
