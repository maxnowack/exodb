{
  "name": "signaldb-workspace",
  "private": true,
  "scripts": {
    "preversion": "npm run lint && npm run test -- run && npm run build",
    "prepare": "npm run build && husky install",
    "lint": "eslint . --max-warnings=0",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build": "(cd packages/signaldb && npm run build) && npm run build -ws",
    "type-check": "tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "npm run build && npm run copy -w examples && vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "author": "Max Nowack <max.nowack@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@rollup/plugin-typescript": "11.1.6",
    "@typescript-eslint/eslint-plugin": "7.9.0",
    "@typescript-eslint/parser": "7.9.0",
    "@vitest/coverage-istanbul": "^1.4.0",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prefer-object-spread": "1.2.1",
    "eslint-plugin-vitest": "0.4.1",
    "fast-glob": "^3.3.2",
    "happy-dom": "14.10.1",
    "husky": "9.0.11",
    "rimraf": "5.0.7",
    "rollup-plugin-typescript-paths": "1.5.0",
    "ts-node": "10.9.2",
    "tslib": "2.6.2",
    "typescript": "5.4.5",
    "vite": "5.2.11",
    "vite-plugin-dts": "3.9.1",
    "vite-plugin-node-polyfills": "0.21.0",
    "vite-tsconfig-paths": "4.3.2",
    "vitepress": "1.1.4",
    "vitest": "1.6.0",
    "vitest-github-actions-reporter": "0.11.1"
  }
}
